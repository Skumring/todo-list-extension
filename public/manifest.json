      "css": ["/static/css/app.css"],
      "js": ["/static/js/content.js"]
    }
  ],
  "web_accessible_resources":[
     "/static/css/content.css"
  ],
  "background": {
    "scripts": ["/static/js/background.js"]
  }
}
